                            <div class="profile_btn_group">

                                <span id="profileImage" class="btnLink profile_upload_btn">
                                    <i class="fas fa-camera"></i>
                                </span>

                            </div>


                        </div>


                    </div>
                </div>
                <!-- /.row -->
                <!-- row -->
                <div class="profile-form mb-5">
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Header</label>
                                <textarea required="" class="form-control" id="txtAreaHeader" name="Text1" cols="40" rows="4"></textarea>

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Footer</label>
                                <input required="" id="txtFooter" type="text" class="form-control" name="" placeholder="John">
                            </div>

                            <div class="form-group">
                                <label>Banner Message</label>
                                <input required="" id="txtBannerMessage" type="text" class="form-control" name="" placeholder="John">
                            </div>

                            <div class="form-group">
                                <label>Terms of use</label>
                                <textarea class="form-control input-lg textarea-editor" id="txtAreaTermsOfUse" name="txtAreaTermsOfUse" cols="40" rows="6"></textarea>

                            </div>


                            <div class="form-group">
                                <label>Privacy policy</label>
                                <textarea class="form-control input-lg textarea-editor" id="txtAreaPrivacypolicy" name="txtAreaPrivacypolicy" cols="40" rows="8"></textarea>

                            </div>
                            

                        </div>



                    </div>



                    <div class="row">

                        <div class="col-md-6">



                            <div class="separator"></div>
                            <div class="form-group">
                                <label id="ErrorMessage" style="color: red;"></label>
                            </div>

                        </div>


                    </div>

                    <div class="buttons-group text-center mt-4">
                        <a href="~/User/CompanyProfileManagement" class="btn mr-2">Cancel</a>
                        @*<button id="btnSave" type="submit" onclick="javascript:dataAccess.loginService.addPhysician()" class="btn flat-btn ml-2">Save</button>*@
                        <button id="btnSave" type="button" class="btn flat-btn ml-2">Save</button>
                    </div>
                </div>
            </form>

            <div class="loading">
                @*<img id="loading-image" src="~/Content/theme/img/preloader.gif" alt="Loading..." />*@
            </div>
        
