<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>BCM</title>

    <link rel="stylesheet" href="~/Content/theme/webfonts/fonts.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/theme/css/all.min.css">
    <!-- Parsley style -->
    <link href="~/Content/theme/css/parsley.css" rel="stylesheet" />

    <!-- sweetalert style -->
    <link href="~/Content/theme/css/sweetalert.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/theme/css/adminlte.min.css">
    <!-- Custom style -->
    <link rel="stylesheet" href="~/Content/theme/css/main.css">

    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Content/theme/js/sweetalert.min.js"></script>


    <script src="~/Content/theme/js/parsley.min.js"></script>

    <script src="~/Content/theme/js/data.js"></script>

    <style>
        /*eye icon on password field*/
        .field-icon {
            float: right;
            margin-right: 8px;
            margin-top: -29px;
            position: relative;
            z-index: 2;
            cursor: pointer;
        }

        .container {
            padding-top: 50px;
            margin: auto;
        }
    </style>

</head>

<body>

    <section class="about-nav mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-12 login-modal">
                    <h2>Recover Password</h2>
                    <form id="UpdatePasswordForm">
                        @*@Html.AntiForgeryToken()*@
                        <div class="form-group mb-4 mt-5">
                            <label>Password</label>
                            <input required type="password" id="password-field1" class="form-control password" name="Password">
                            <span toggle="#password-field1" class="fa fa-lg fa-eye field-icon toggle-password"></span>
                            <!-- <i class="far fa-envelope field_icon"></i> -->
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input required type="password" id="password-field2" class="form-control password" name="ConfirmPassword">
                            <span toggle="#password-field2" class="fa fa-lg fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="mx-auto">
                            <input type="hidden" name="SecuredKey" value="@Url.RequestContext.RouteData.Values["id"]" />
                            <center><input type="submit" class="btn btn-primary log-b pe-5  ps-5 pt-2 pb-2 mb-4 mt-4" style="border-radius: 6px;" value="Submit" /></center>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Content/theme/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/theme/js/adminlte.min.js"></script>
</body>

</html>
<script>

    $(document).on('submit', "#UpdatePasswordForm", function (e) {
        debugger
        e.preventDefault();

        dataAccess.loginService.UpdatePasswordForm();

    })

    //eye icon on password field
    $(".toggle-password").click(function () {
        debugger;
        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });

</script>
